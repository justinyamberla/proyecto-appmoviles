<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistorialActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/textViewHistorial"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/imageView13"
        app:srcCompat="@drawable/historial" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="238dp"
        android:layout_height="59dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:shrinkColumns="0"
        android:stretchColumns="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12">

        <TableRow>

            <TextView
                android:gravity="center"
                android:padding="3dip"
                android:text="Fecha"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:padding="3dip"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:padding="3dip"
                android:text="Autor"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:padding="3dip"
                android:text="ISBN"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:padding="3dip"
                android:text="Acciones"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="12/07/22"
                android:textColor="@color/black" />

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="El Nombre\ndel Viento"
                android:textColor="@color/black" />

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="Patrick\nRothfuss"
                android:textColor="@color/black" />

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="978958\n8940670"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="160dp">

                <ImageButton
                    android:id="@+id/btnLibro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_visibility_24" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_delete_24" />

            </LinearLayout>


        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="11/07/22"
                android:textColor="@color/black" />

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="El Nombre\ndel Viento"
                android:textColor="@color/black" />

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="Patrick\nRothfuss"
                android:textColor="@color/black" />

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="978958\n8940670"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="160dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_visibility_24" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_delete_24" />

            </LinearLayout>


        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="10/07/22"
                android:textColor="@color/black" />

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="El Nombre\ndel Viento"
                android:textColor="@color/black" />

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="Patrick\nRothfuss"
                android:textColor="@color/black" />

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="978958\n8940670"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="160dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_visibility_24" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_delete_24" />

            </LinearLayout>


        </TableRow>


    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>